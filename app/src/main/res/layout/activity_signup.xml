<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_title_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="회원가입을 하자!"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_email_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="16dp"
        android:text="이메일"
        app:layout_constraintBottom_toTopOf="@+id/edit_email_signup"
        app:layout_constraintStart_toStartOf="@id/edit_email_signup"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_signup" />

    <EditText
        android:id="@+id/edit_email_signup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_email_signup"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/tv_password_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="비밀번호"
        app:layout_constraintBottom_toTopOf="@+id/edit_password_signup"
        app:layout_constraintStart_toStartOf="@+id/edit_password_signup"
        app:layout_constraintTop_toBottomOf="@+id/edit_email_signup"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/edit_password_signup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_password_signup"
        app:layout_constraintWidth_percent="0.8" />

    <TextView
        android:id="@+id/tv_password_noti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintStart_toStartOf="@+id/edit_password_signup"
        app:layout_constraintTop_toBottomOf="@+id/edit_password_signup"
        tools:text="몇자이상으로 해주라~~" />

    <TextView
        android:id="@+id/tv_password_config_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="비밀번호 확인"
        app:layout_constraintBottom_toTopOf="@+id/edit_password_config_signup"
        app:layout_constraintStart_toStartOf="@+id/edit_password_config_signup"
        app:layout_constraintTop_toBottomOf="@+id/tv_password_noti" />

    <EditText
        android:id="@+id/edit_password_config_signup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_password_config_signup" />

    <TextView
        android:id="@+id/tv_password_config_noti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        tools:text="비밀번호가 다르다"
        app:layout_constraintStart_toStartOf="@+id/edit_password_config_signup"
        app:layout_constraintTop_toBottomOf="@+id/edit_password_config_signup" />

    <TextView
        android:id="@+id/signup_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="#A682B1FF"
        android:text="회원가입 끝 로그인을 하자!"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_password_config_noti" />

</androidx.constraintlayout.widget.ConstraintLayout>